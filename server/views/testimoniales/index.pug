extends ../layout/index
block contenido
    main.container.mt-5
        h1.text-center.mb-5 #{pagina}

        .row
            .col-md-12
                include ../layout/partials/testimoniales   
            .col-md-12
                h2.text-center Agrega un Testimonial
                if(errores)
                    each error in errores
                        .alert.alert-danger.text-center=error.mensaje
            
                .row.justify-content-center
                    .col-md-8
                        form(action="/testimoniales", method="post")
                            .fomr-group
                                label(for="nombre") Nombre
                                input(type="text",placeholder="Tu Nombre", name="nombre", id="nombre", class="form-control", value=nombre)
                            .fomr-group
                                label(for="correo") Correo Electronico
                                input(type="email",placeholder="Tu Correo Electronico", name="correo", id="correo", class="form-control", value=correo) 
                            .fomr-group
                                label(for="mensaje") Mensaje
                                textarea#mensaje(name="mensaje", rows="3", placeholder="Tu mensaje", class="form-control")=mensaje

                            input.btn.btn-success.btn-block(type="submit", value="Agregar")